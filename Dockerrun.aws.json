{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "builder_volume",
      "host": {
        "sourcePath": "/var/app/current"
      }
    },
    {
      "name": "nginx_volume",
      "host": {
        "sourcePath": "/var/app/current"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "builder",
      "image": "node:alpine",
      "essential": true,
      "memory": 126,
      "mountPoints": [
        {
          "sourceVolume": "builder_volume",
          "containerPath": "/app"
        }
      ],
      "entryPoint": "/app",
      "command": [ "npm", "install" ],
      "command": [ "npm", "run", "build" ]
    },
    {
      "name": "nginx",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx_volume",
          "containerPath": "/usr/share/nginx/html",
	  "readOnly": true
        }
      ]
    }
  ]
}
