{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "builder",
      "host": {
        "sourcePath": "/var/app/current"
      }
    },
    {
      "name": "nginx",
      "host": {
        "sourcePath": "/var/app/current"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "builder",
      "image": "node:alpine",
      "essential": true,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "builder",
          "containerPath": "/app"
        }
      ],
      "command": [ "npm", "install"],
      "command": [ "npm", "run", "build"]
    },
    {
      "name": "nginx",
      "image": "nginx",
      "essential": true,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "nginx",
          "containerPath": "/usr/share/nginx/html"
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ]
}
