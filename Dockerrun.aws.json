{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "builder",
      "host": {
        "sourcePath": "./"
      }
    },
    {
      "name": "nginx",
      "host": {
        "sourcePath": "./app/build"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "builder",
      "image": "node:alpine",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "builder",
          "containerPath": "./"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
    {
      "hostPort": 80,
      "containerPort": 80
    }
  ],
      "mountPoints": [
        {
          "sourceVolume": "nginx",
          "containerPath": "/usr/share/nginx/html"
        }
      ]

    }
  ]
}
